<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RedPackageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FA9219</item>
        <item name="colorPrimaryDark">#FA9219</item>
        <item name="colorAccent">#FA9219</item>
    </style>

    <style name="listview_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/main_list_divider</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    //首页进来的图标
    <style name="AppTheme.Theme_Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="dialogstyle" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item> 
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AnimDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_out</item>
    </style>

    <style name="dialog_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_psd</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_psd</item>
    </style>

    <style name="ImageEnter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_end</item>
    </style>
    <!--文字样式-->
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <!--文字样式 #999999-->
    <style name="textStyle16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color9</item>
    </style>

    <style name="textStyle14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color9</item>
    </style>

    <style name="textStyle4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color39</item>
    </style>

    <style name="RLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/white</item>

    </style>
    <!--搜索栏的样式-->
    <style name="SearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/shape_circular_bead2</item>
        <item name="android:drawableStart">@drawable/icon_search_view</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="CommentStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CommonSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#49A2FE</item>
    </style>

    <!--按钮样式-->
    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/shape_circular_bead_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NoTitleTranslucent80Theme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in1</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out1</item>
    </style>
</resources>
