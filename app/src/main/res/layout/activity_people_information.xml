<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:maxLength="9"
                            android:textColor="@color/color39"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_gender"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@+id/tv_nickname"
                            android:layout_alignBottom="@+id/tv_nickname"
                            android:layout_marginStart="6dp"
                            android:layout_toEndOf="@+id/tv_nickname" />

                        <ImageView
                            android:id="@+id/iv_headPortrait"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:id="@+id/tv_DuoDuoNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_headPortrait"
                            android:text=""
                            android:textColor="@color/color9"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_realName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_DuoDuoNumber"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/color9"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_district"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_realName"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/color9"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <include layout="@layout/layout_line10" />

            <RelativeLayout style="@style/RLayoutStyle">

                <TextView
                    android:id="@+id/tv_mobile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/mobile_phone"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/tv_mobile_phone"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout style="@style/RLayoutStyle">

                <TextView
                    android:id="@+id/tv_mailbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/mailbox"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/tv_mailbox"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout style="@style/RLayoutStyle">

                <TextView
                    android:id="@+id/tv_personalizedSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/personalized"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/tv_personalizedSignature"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout style="@style/RLayoutStyle">

                <TextView
                    android:id="@+id/tv_wallet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/m_people_information_wallet_address_label"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_walletAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@+id/iv_duplication"
                    android:layout_toEndOf="@+id/tv_wallet_address"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_duplication"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_copy_gray" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sendMessage"
                style="@style/BtnStyle"
                android:text="@string/send_message" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>