<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:ignore="all">

    <include layout="@layout/layout_title_back" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:id="@+id/tv_nickname"
                            style="@style/textStyle4"
                            android:text="" />

                        <ImageView
                            android:id="@+id/iv_gender"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@+id/tv_nickname"
                            android:layout_alignBottom="@+id/tv_nickname"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_nickname" />

                        <FrameLayout
                            android:id="@+id/fl"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_alignParentEnd="true">

                            <ImageView
                                android:id="@+id/iv_headPortrait"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/icon_commit_header" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_DuoDuoNumber"
                            style="@style/textStyle1"
                            android:layout_alignBottom="@+id/fl"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_realName"
                            style="@style/textStyle1"
                            android:layout_below="@+id/tv_DuoDuoNumber"
                            android:layout_marginTop="10dp"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_district"
                            style="@style/textStyle1"
                            android:layout_below="@+id/tv_realName"
                            android:layout_marginTop="10dp"
                            android:text="" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <include layout="@layout/layout_line10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_mobile_phone"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/mobile_phone" />

                <TextView
                    android:id="@+id/tv_phoneNumber"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/tv_mobile_phone"
                    android:text="" />
            </RelativeLayout>

            <include layout="@layout/layout_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_mailbox"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/mailbox" />

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/tv_mailbox"
                    android:text="" />
            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_personalizedSignature"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/personalized" />

                <TextView
                    android:id="@+id/tv_signature"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/tv_personalizedSignature" />

            </RelativeLayout>

            <include layout="@layout/layout_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_wallet_address"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:text="@string/m_people_information_wallet_address_label" />

                <TextView
                    android:id="@+id/tv_walletAddress"
                    style="@style/textStyle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/iv_duplication"
                    android:layout_toEndOf="@+id/tv_wallet_address"
                    android:ellipsize="middle"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/iv_duplication"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_copy_gray" />

            </RelativeLayout>

            <include layout="@layout/layout_line10" />

            <TextView
                android:id="@+id/tv_sendMessage"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="@string/send_message"
                android:textColor="@color/theme_color"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>