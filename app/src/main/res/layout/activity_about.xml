<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/about_title" />

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:src="@drawable/icon_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_title" />

    <View
        android:id="@+id/about_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="76dp"
        android:background="@color/m_add_friend_line"
        app:layout_constraintTop_toBottomOf="@+id/about_icon" />

    <TextView
        android:onClick="aboutVersion"
        android:id="@+id/about_release_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/icon_go"
        android:paddingStart="11dp"
        android:paddingTop="22dp"
        android:paddingEnd="13dp"
        android:paddingBottom="22dp"
        android:text="@string/about_release_notes"
        android:textColor="@color/themecolor"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/about_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/m_add_friend_line"
        app:layout_constraintTop_toBottomOf="@+id/about_release_notes" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:text="@string/about_version"
        android:textColor="@color/themecolor"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/about_release_notes" />

    <TextView
        android:id="@+id/about_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:text="@string/about_version_number"
        android:textColor="@color/about_version_number"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/about_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/about_version" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/m_add_friend_line"
        app:layout_constraintTop_toBottomOf="@+id/about_version" />

    <TextView
        android:id="@+id/about_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="@string/about_label"
        android:textColor="@color/m_item_msg_session_label"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/about_label_1"
        android:textSize="13sp"
        android:textColor="@color/m_item_msg_session_label"
        android:text="@string/about_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>