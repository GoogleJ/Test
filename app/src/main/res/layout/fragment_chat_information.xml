<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/m_add_friend_line"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat">

    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_fragment_chat_information_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_fragment_chat_information_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/m_chat_information_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="21dp"
                    android:src="@drawable/icon_header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/m_chat_information_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="17dp"
                    android:text="爱吃水果"
                    android:textColor="@color/themecolor"
                    android:textSize="19dp"
                    app:layout_constraintStart_toEndOf="@+id/m_chat_information_header"
                    app:layout_constraintTop_toTopOf="@+id/m_chat_information_header" />

                <TextView
                    android:id="@+id/m_chat_information_signature_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="专业兑换港币，加好友线下联系"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/m_chat_information_header"
                    app:layout_constraintStart_toEndOf="@id/m_chat_information_header"
                    app:layout_constraintTop_toBottomOf="@+id/m_chat_information_user_name" />

                <ImageView
                    android:id="@+id/m_chat_information_go_icon"
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="11dp"
                    android:src="@drawable/icon_information_go"
                    app:layout_constraintBottom_toBottomOf="@+id/m_chat_information_header"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/m_chat_information_header" />

                <View
                    android:id="@+id/m_chat_information_line"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/m_add_friend_line"
                    app:layout_constraintStart_toStartOf="@+id/m_chat_information_header"
                    app:layout_constraintTop_toBottomOf="@+id/m_chat_information_header" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/m_chat_information_add_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/m_chat_information_add_member"
                android:textColor="@color/themecolor"
                android:textSize="17dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:text="@string/label"
                    android:textColor="@color/themecolor"
                    android:textSize="17dp" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/m_chat_information_switch_btn_1"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/label"
                    app:sb_checked="false"
                    app:sb_show_indicator="false" />

                <View
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/m_add_friend_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label" />

                <TextView
                    android:id="@+id/label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:text="@string/label_1"
                    android:textColor="@color/themecolor"
                    android:textSize="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/line" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/m_chat_information_switch_btn_2"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    app:layout_constraintBottom_toBottomOf="@+id/label_1"
                    app:layout_constraintStart_toStartOf="@+id/m_chat_information_switch_btn_1"
                    app:layout_constraintTop_toTopOf="@+id/label_1"
                    app:sb_checked="true"
                    app:sb_show_indicator="false" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/m_chat_information_chat_and_picture_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:text="@string/m_chat_information_chat_and_picture_text"
                        android:textColor="@color/themecolor"
                        android:textSize="17dp" />

                    <ImageView

                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/icon_go"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/m_add_friend_line"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/m_chat_information_find_chat_history_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:text="@string/m_chat_information_find_chat_history_label"
                        android:textColor="@color/themecolor"
                        android:textSize="17dp" />

                    <ImageView

                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/icon_go"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/m_add_friend_line"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/m_chat_information_set_current_time_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:text="@string/m_chat_information_set_current_time_text"
                        android:textColor="@color/themecolor"
                        android:textSize="17dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/icon_go"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableEnd="@drawable/icon_go"
                android:paddingStart="12dp"
                android:paddingTop="22dp"
                android:paddingEnd="12dp"
                android:paddingBottom="22dp"
                android:text="清空聊天记录"
                android:textColor="@color/themecolor"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>