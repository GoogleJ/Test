<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/transfer_send_layout"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="224dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp"
        android:id="@+id/send_red_packet_layout">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/transfer_prompt"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/transfer_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/message"

            android:text="@string/transfer_money"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/message"
            />
        <ImageView
            android:id="@+id/transfer_type_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/message"
            app:layout_constraintBottom_toBottomOf="@+id/transfer_money"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_transfer_logo"
            />
        <TextView
            android:id="@+id/prompt_logo"
            android:text="@string/transfer_prompt_logo"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:paddingBottom="5dp"
            android:textColor="@color/textcolor3"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>