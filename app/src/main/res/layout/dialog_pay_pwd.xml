<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="300dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="46dp"
        >


      <TextView
          android:id="@+id/prompt_please_input_pay_pwd"
          android:textColor="@color/themecolor"
          android:textSize="19sp"
          android:text="@string/please_input_pay_pwd"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="20dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingEnd="12dp"
          android:drawableEnd="@drawable/rc_cs_close"
          />
        <!--<ImageView-->
            <!--android:id="@+id/close_btn"-->
            <!--android:layout_marginEnd="17dp"-->
            <!--android:src="@drawable/rc_cs_close"-->
            <!--android:layout_gravity="end"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/prompt_please_input_pay_pwd"-->
            <!--app:layout_constraintTop_toTopOf="@+id/prompt_please_input_pay_pwd"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="15dp" />-->
        <com.zxjk.duoduo.weight.PwdEditText
            android:id="@+id/pwd_edit_text"
            app:space="0dp"

            app:layout_constraintTop_toBottomOf="@+id/prompt_please_input_pay_pwd"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <include



            android:id="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/pwd_edit_text"
            layout="@layout/keyboadview"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>