<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_bg_press"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />


    <include
        android:id="@+id/account_list_item"
        layout="@layout/item_account_switch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/account_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/change_account_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableEnd="@drawable/icon_go"
        android:onClick="changeAccountLogin"
        android:paddingStart="12dp"
        android:paddingTop="22dp"
        android:paddingEnd="13dp"
        android:paddingBottom="22dp"
        android:text="@string/change_account_login"
        android:textColor="@color/themecolor"
        android:textSize="17sp" />


</LinearLayout>