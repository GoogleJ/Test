<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4B4D5B">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ico_back" />

        <RadioGroup
            android:id="@+id/rgExchangeTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bac_exchange1"
                android:button="@null"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="买入"
                android:textColor="@drawable/selector_text_exchange"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bac_exchange2"
                android:button="@null"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="出售"
                android:textColor="@drawable/selector_text_exchange"
                android:textSize="16sp" />

        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:onClick="jump2List"
            android:src="@drawable/ic_exchange_list" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F8F8F8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvExchangeLine1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买币种"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exchange_coins" />

        <TextView
            android:id="@+id/tvExchangeCoinType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="HK"
            android:textColor="@color/themecolor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前参考价格"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="1 CNY=1HK"
            android:textColor="@color/themecolor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvExchangeLine3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangeChooseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_exchange_dropdown"
            android:drawablePadding="4dp"
            android:onClick="chooseCount"
            android:padding="4dp"
            android:text="@string/choosecount" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F8F8F8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvExchangeLine4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="需支付金额"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="435.00 CNY"
            android:textColor="@color/themecolor" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvExchangePayType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:paddingStart="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:text="@string/paytype"
        android:textColor="@color/textcolor3"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/rlExchangeType1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivExchangePaytype1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_exchange_wechat" />

        <TextView
            android:id="@+id/tvExchangePayType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/ivExchangePaytype1"
            android:text="@string/wechat"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangePayInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExchangePayType1"
            android:layout_alignStart="@id/tvExchangePayType1"
            android:layout_marginTop="12dp"
            android:textColor="@color/textcolor3"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbExchangePayType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_exchange_radio"
            android:button="@null"
            android:clickable="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/rlExchangeType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivExchangePaytype2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_exchange_alipay" />

        <TextView
            android:id="@+id/tvExchangePayType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/ivExchangePaytype2"
            android:text="@string/alipay"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangePayInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExchangePayType2"
            android:layout_alignStart="@id/tvExchangePayType2"
            android:layout_marginTop="12dp"
            android:textColor="@color/textcolor3"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbExchangePayType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_exchange_radio"
            android:button="@null"
            android:clickable="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/rlExchangeType3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivExchangePaytype3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_exchange_bankpay" />

        <TextView
            android:id="@+id/tvExchangePayType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/ivExchangePaytype3"
            android:text="@string/bankcard"
            android:textColor="#4B4D5B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvExchangePayInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvExchangePayType3"
            android:layout_alignStart="@id/tvExchangePayType3"
            android:layout_marginTop="12dp"
            android:textColor="@color/textcolor3"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbExchangePayType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_exchange_radio"
            android:button="@null"
            android:clickable="false" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F8F8">

        <Button
            android:id="@+id/btnExchangeConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/selector_login_btn_click_bg"
            android:onClick="submit"
            android:text="完  成"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>