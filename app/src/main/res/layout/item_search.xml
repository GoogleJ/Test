<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m_item_search_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/m_item_search_icon"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/m_item_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="13dp"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/m_item_search_icon"
        app:layout_constraintTop_toTopOf="@+id/m_item_search_icon"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/m_item_search_dudu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/business_card_duoduo_id"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/m_item_search_text"
        app:layout_constraintTop_toBottomOf="@+id/m_item_search_text" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bga_adapter_line"
        app:layout_constraintStart_toStartOf="@+id/m_item_search_dudu_id"
        app:layout_constraintTop_toBottomOf="@+id/m_item_search_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>