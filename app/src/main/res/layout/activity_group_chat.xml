<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:ignore="all">

    <include layout="@layout/layout_title_back" />


    <LinearLayout
        android:id="@+id/m_group_chat_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/m_group_chat_edit_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_circular_bead2"
            android:drawableStart="@drawable/icon_search_view"
            android:drawablePadding="4dp"
            android:hint="@string/enter_group_chat"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingStart="25dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/m_group_chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>