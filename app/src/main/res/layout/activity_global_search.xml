<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_search_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_contact_search_label" />


    <EditText
        android:id="@+id/m_search_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="1"
        android:background="@color/white"
        style="?attr/checkedTextViewStyle"
        android:drawableStart="@drawable/icon_search_view"
        android:drawablePadding="10dp"
        android:hint="@string/m_contact_search_label"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:paddingStart="20dp"
        android:textSize="16dp"
        tools:ignore="RtlCompat" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp" />


</LinearLayout>