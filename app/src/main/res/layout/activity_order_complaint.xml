<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/tv_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/color9"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="交易单号"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_transactionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_1"
                    android:layout_alignBottom="@id/tv_1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="申诉人"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_plaintiff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_2"
                    android:layout_alignBottom="@id/tv_2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_2"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="被申诉人"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_byPlaintiff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_3"
                    android:layout_alignBottom="@id/tv_3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_3"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="数量"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_4"
                    android:layout_alignBottom="@id/tv_4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_4"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="金额"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_5"
                    android:layout_alignBottom="@id/tv_5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_5"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="申诉凭证"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_proofComplaint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_6"
                    android:layout_alignBottom="@id/tv_6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_paysign" />

                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_6"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="申诉类型"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_appealType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_9"
                    android:layout_alignBottom="@id/tv_9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_9"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="处理时间"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_processingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_7"
                    android:layout_alignBottom="@id/tv_7"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_7"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="申诉结果"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_complaintResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_8"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@id/tv_8"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>