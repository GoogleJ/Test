<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_information_1"
    android:orientation="vertical"
    tools:ignore="RtlCompat">

    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_verification_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_verification_title_bar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/m_verification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:text="@string/m_verification_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText

            android:id="@+id/m_verification_edit"
            style="?attr/checkedTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:background="@null"
            android:hint="Lorem Ipsum"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@+id/m_verification_label" />

        <ImageView
            android:id="@+id/m_verification_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/icon_close"
            app:layout_constraintBottom_toBottomOf="@+id/m_verification_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/m_verification_edit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/m_add_friend_line"
            app:layout_constraintTop_toBottomOf="@+id/m_verification_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/m_verification_send_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_login_btn_click_bg_pressed"
        android:gravity="center"
        android:text="@string/m_verification_send_btn"
        android:textColor="@color/m_verification_send_btn"

        android:textSize="19dp" />


</LinearLayout>