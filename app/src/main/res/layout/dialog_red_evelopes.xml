<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="103dp"


        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/hongbao"
            android:layout_height="match_parent">
            <ImageView

                android:id="@+id/m_red_evelopes_close"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/icon_hongbao_close"
                 />
            <ImageView
                android:id="@+id/m_red_envelopes_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/m_red_envelopes_user"
                android:text="@string/m_red_envelopes_user"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
            <ImageView
                android:id="@+id/m_transfer_envelopes_heard"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_header"
                android:layout_marginEnd="13dp"
                app:layout_constraintEnd_toStartOf="@+id/m_red_envelopes_user"
                app:layout_constraintBottom_toBottomOf="@+id/m_red_envelopes_user"
                app:layout_constraintTop_toTopOf="@+id/m_red_envelopes_user"
                />
            <TextView
                android:id="@+id/m_red_envelopes_signature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:text="@string/m_red_envelopes_signature_text"
                app:layout_constraintTop_toBottomOf="@+id/m_red_envelopes_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>