<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.msgpage.ShareGroupQRActivity">

    <include layout="@layout/layout_title_back" />

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="12dp"
        android:background="@drawable/shape_circular_bead2"
        android:drawableStart="@drawable/icon_search_view"
        android:drawablePadding="4dp"
        android:hint="@string/m_contact_search_label"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_mine_rightarrow"
        android:onClick="createNewChat"
        android:padding="12dp"
        android:text="@string/createnewchat"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:padding="12dp"
        android:text="@string/chat_recent"
        android:textColor="@color/textcolor3"
        android:textSize="13sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:overScrollMode="never" />

</LinearLayout>