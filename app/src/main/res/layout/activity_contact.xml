<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/m_contact_edit_back"
    android:orientation="vertical"
    tools:ignore="RtlCompat,MissingConstraints">

    <com.zxjk.duoduo.ui.widget.TitleBar
        android:id="@+id/m_contact_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_contact_title_bar" />

    <LinearLayout
        android:id="@+id/m_contact_search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_contact_title_bar">

        <EditText

            android:id="@+id/m_contact_search_edit_1"
            style="?attr/checkedTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="24dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"

            android:layout_marginBottom="26dp"
            android:background="@color/m_contact_edit_back"
            android:drawableStart="@drawable/ic_search_gray"
            android:drawablePadding="10dp"
            android:hint="@string/contact_search"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/m_contact_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/m_contact_search_edit" />


    <TextView
        android:id="@+id/previewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_contact_title_bar" />

    <com.zxjk.duoduo.ui.msgpage.widget.IndexView
        android:id="@+id/index_view"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/m_contact_title_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>