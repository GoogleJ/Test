<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:ignore="all">

    <include layout="@layout/layout_title_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/add_group_verification"
                android:textColor="@color/theme_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_group_verification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/add_group_verification_label"
                android:textColor="@color/color9"
                android:textSize="14sp" />
        </LinearLayout>

        <com.suke.widget.SwitchButton
            android:id="@+id/add_group_verification_switch"
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:layout_marginEnd="12dp"
            app:sb_checked="false"
            app:sb_show_indicator="false" />
    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout style="@style/RLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/upgrade_group_number"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/iv_enter"
            android:text="@string/upgrade"
            android:textColor="@color/color9"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_enter"
            style="@style/ImageEnter" />

    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout style="@style/RLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/group_members_banned"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <com.suke.widget.SwitchButton
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:sb_checked="false"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout style="@style/RLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/prohibit_group_members_from_single_chat"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <com.suke.widget.SwitchButton
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:sb_checked="false"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout style="@style/RLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/prohibited_send_picture"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <com.suke.widget.SwitchButton
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:sb_checked="false"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout style="@style/RLayoutStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/prohibited_send_link"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <com.suke.widget.SwitchButton
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:sb_checked="false"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <include layout="@layout/layout_line10" />

    <RelativeLayout
        style="@style/RLayoutStyle"
        android:onClick="transferGroup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/transfer_group"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />


        <ImageView

            style="@style/ImageEnter" />

    </RelativeLayout>


</LinearLayout>