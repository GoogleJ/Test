<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_transfer_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_successful_transfer_title_bar"
        />
    <ImageView
        android:id="@+id/m_transfer_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pending"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        />
    <TextView
        android:id="@+id/m_transfer_info_pending_payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_transfer_info_pending_payment_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="19sp"
        android:textColor="@color/login_bg"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="34dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/m_transfer_info_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_red_envelopes_money_text"
            android:textSize="35sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
             />
        <TextView
            android:id="@+id/m_transfer_info_unit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_red_envelopes_unit_label"
            android:textSize="25sp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/m_transfer_info_money_text"
            app:layout_constraintTop_toTopOf="@+id/m_transfer_info_money_text"
            app:layout_constraintStart_toEndOf="@+id/m_transfer_info_money_text"
            android:textColor="@color/m_red_envelopes_unit_text"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/m_transfer_info_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/m_transfer_info_commit_btn"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:textColor="@color/themecolor"
        android:background="@drawable/shape_bac_normal"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/m_transfer_info_caveat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"

        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:text="@string/m_transfer_info_caveat_text"
        />


</LinearLayout>