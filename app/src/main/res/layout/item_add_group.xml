<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/add_del_group_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/remove_headers"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/icon_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/remove_headers"
        app:layout_constraintStart_toEndOf="@+id/remove_headers"
        app:layout_constraintTop_toTopOf="@+id/remove_headers" />

    <CheckBox
        android:id="@+id/selected_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="39dp"
        android:button="@null"
        android:clickable="false"
        android:background="@drawable/selector_document_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/remove_headers"
        app:layout_constraintTop_toTopOf="@+id/remove_headers"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        android:background="@color/bga_adapter_line"
        app:layout_constraintTop_toBottomOf="@+id/remove_headers"


        />
</androidx.constraintlayout.widget.ConstraintLayout>