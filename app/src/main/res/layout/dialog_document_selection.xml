<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="all">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/shape_circular_bead">

        <TextView
            android:id="@+id/type_of_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/type_of_certificate"
            android:textColor="@color/theme_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/id_card_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/type_of_certificate"
            android:layout_marginStart="30dp"
            android:src="@drawable/selector_document_selection" />

        <TextView
            android:id="@+id/id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_of_certificate"
            android:layout_alignTop="@+id/id_card_icon"
            android:layout_alignBottom="@+id/id_card_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/id_card_icon"
            android:gravity="center"
            android:text="@string/id_card"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/passport_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/id_card_icon"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/selector_document_selection" />

        <TextView
            android:id="@+id/passport_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_card"
            android:layout_alignTop="@+id/passport_icon"
            android:layout_alignBottom="@+id/passport_icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/passport_icon"
            android:gravity="center"
            android:text="@string/passport"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/other_identity_card_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/passport_icon"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/selector_document_selection" />

        <TextView
            android:id="@+id/other_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passport_text"
            android:layout_alignTop="@+id/other_identity_card_icon"
            android:layout_alignBottom="@+id/other_identity_card_icon"
            android:layout_toEndOf="@+id/other_identity_card_icon"
            android:gravity="center"
            android:text="@string/other_identity_card"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>