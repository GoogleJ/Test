<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:id="@+id/btn_layout"
    tools:ignore="MissingConstraints,UnknownId">

    <TextView
        android:id="@+id/exchange_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="2019.2.19 9:33"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/exchange_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"

        android:textColor="@color/themecolor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/exchange_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:paddingTop="12dp"
        android:text="@string/exchange_list_type"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/exchange_list_time" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/bga_adapter_line"
        app:layout_constraintTop_toBottomOf="@+id/exchange_list_type" />

    <ImageView
        android:id="@+id/exchange_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/icon_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/exchange_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="800"
        android:textColor="@color/themecolor"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/exchange_list_icon"
        app:layout_constraintTop_toTopOf="@+id/exchange_list_icon" />

    <TextView
        android:id="@+id/exchange_list_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="@string/count"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/exchange_list_icon"
        app:layout_constraintStart_toEndOf="@+id/exchange_list_icon" />

    <TextView
        android:id="@+id/exchange_list_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HK"
        android:textColor="@color/themecolor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exchange_list_number" />

    <TextView
        android:id="@+id/exchange_list_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cointype"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exchange_list_currency" />
    <TextView
        android:id="@+id/exchange_list_money"
        android:text="43655.00 CNY"
        android:textSize="16sp"
        android:textColor="@color/themecolor"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@+id/exchange_list_currency"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/exchange_list_money_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moneyCount"
        android:layout_marginEnd="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/exchange_list_currency_label"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>