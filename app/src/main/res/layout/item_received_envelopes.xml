<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat">

    <ImageView
        android:id="@+id/m_received_envelopes_heard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/icon_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_received_envelopes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="@string/m_received_envelopes_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/m_received_envelopes_heard"
        app:layout_constraintTop_toTopOf="@+id/m_received_envelopes_heard" />

    <TextView
        android:id="@+id/m_received_envelopes_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="@string/m_received_envelopes_time_text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/m_received_envelopes_heard"
        app:layout_constraintStart_toEndOf="@+id/m_received_envelopes_heard" />

    <TextView
        android:id="@+id/m_received_envelopes_money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:textColor="@color/black"
        android:text="@string/m_received_envelopes_money_text"

        />
</androidx.constraintlayout.widget.ConstraintLayout>