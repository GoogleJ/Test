<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlCompat,MissingConstraints">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="481dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="103dp"
        android:background="@drawable/hongbao"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/hongbao"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/close_red_packet"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/icon_hongbao_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/m_red_envelopes_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m_red_envelopes_user"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/m_transfer_envelopes_heard"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/icon_header"
                app:layout_constraintBottom_toBottomOf="@+id/m_red_envelopes_user"
                app:layout_constraintEnd_toStartOf="@+id/m_red_envelopes_user"
                app:layout_constraintTop_toTopOf="@+id/m_red_envelopes_user" />
        <TextView
            android:id="@+id/m_expired_envelopes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_expired_envelopes_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="56dp"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/m_red_envelopes_user"
             />
            <TextView
                android:id="@+id/m_expired_envelopes_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="15sp"
                android:visibility="gone"
                android:text="@string/m_expired_envelopes_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>