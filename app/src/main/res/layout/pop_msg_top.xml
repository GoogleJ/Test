<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_pop_background"
    android:orientation="vertical">
    <LinearLayout
        android:paddingStart="20dp"
        android:id="@+id/send_group_chat"
        style="@style/msg_top_pop_style"
        android:paddingTop="20dp"
        >

        <ImageView
            style="@style/msg_top_pop_img_style"
            app:srcCompat="@drawable/icon_group_chat" />

        <TextView
            style="@style/msg_top_pop_text_style"
            android:text="@string/send_group_chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/invite_friends"
        android:paddingStart="20dp"
        style="@style/msg_top_pop_style">

        <ImageView
            style="@style/msg_top_pop_img_style"
            app:srcCompat="@drawable/ic_invite_friends" />

        <TextView
            style="@style/msg_top_pop_text_style"
            android:text="@string/invite_friends" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scan"
        android:paddingStart="20dp"
        style="@style/msg_top_pop_style">

        <ImageView
            style="@style/msg_top_pop_img_style"
            app:srcCompat="@drawable/ic_scan" />

        <TextView
            style="@style/msg_top_pop_text_style"
            android:text="@string/scan" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="20dp"
        android:id="@+id/collection_and_payment"
        style="@style/msg_top_pop_style">

        <ImageView
            style="@style/msg_top_pop_img_style"
            app:srcCompat="@drawable/ic_collection_and_payment" />

        <TextView
            style="@style/msg_top_pop_text_style"
            android:text="@string/collection_and_payment" />
    </LinearLayout>

</LinearLayout>