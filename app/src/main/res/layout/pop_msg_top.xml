<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/ic_msg_popwindow_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/send_group_chat"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_groupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_group_chat01" />

        <TextView
            android:id="@+id/tv_groupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_groupChat"
            android:text="@string/send_group_chat"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_alignStart="@+id/tv_groupChat"
            android:layout_alignParentBottom="true"
            android:background="#1AFFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invite_friends"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_inviteFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_invite_friends01" />

        <TextView
            android:id="@+id/tv_inviteFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_inviteFriends"
            android:text="@string/invite_friends"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignStart="@+id/tv_inviteFriends"
            android:layout_alignParentBottom="true"
            android:background="#1AFFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scan"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_scan01" />

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_scan"
            android:text="@string/scan"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_alignStart="@+id/tv_scan"
            android:layout_alignParentBottom="true"
            android:background="#1AFFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/collection_and_payment"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_collection01" />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/iv_collection"
            android:text="@string/collection_and_payment"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>