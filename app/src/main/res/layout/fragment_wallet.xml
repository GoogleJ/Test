<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/themecolor"
        android:gravity="center"
        android:text="嘟嘟钱包"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/themecolor"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvWalletPageTop1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_walletpage_scan"
                    android:drawablePadding="6dp"
                    android:gravity="center_horizontal"
                    android:text="扫一扫"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvWalletPageTop2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_walletpage_payment"
                    android:drawablePadding="6dp"
                    android:gravity="center_horizontal"
                    android:text="收款码"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvWalletPageTop3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_walletpage_wallet"
                    android:drawablePadding="6dp"
                    android:gravity="center_horizontal"
                    android:text="区块链钱包"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvWalletPageTop4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_walletpage_balance"
                    android:drawablePadding="6dp"
                    android:gravity="center_horizontal"
                    android:text="港币余额"
                    android:textColor="@color/white" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerWalletPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>