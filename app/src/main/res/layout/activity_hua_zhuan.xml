<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.walletpage.HuaZhuanActivity">

    <include layout="@layout/layout_title_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:onClick="changeType"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvHuaZhuan3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_block_wallet"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/blockWallet"
            android:textColor="@color/themecolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvHUaZhuanRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_block_arrow"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="1:1"
            android:textColor="@color/themecolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvHuaZhuan4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_block_balance"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/balance"
            android:textColor="@color/themecolor"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/personal_information_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHuaZhuan1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/blockWallet"
                android:textColor="@color/themecolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHuaZhuanBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5555HKB"
                android:textColor="@color/themecolor"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/m_add_friend_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHuaZhuan2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/balance"
                android:textColor="@color/themecolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvHuaZhuanBlockWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5HK"
                android:textColor="@color/themecolor"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/personal_information_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/personal_information_1"
            android:gravity="center_vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/etHuaZhuanCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/inputhuazhuancount"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/shape_bac_huazhuan_all"
                android:onClick="huazhuanAll"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/huazhuanAll"
                android:textColor="@color/themecolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHuaZhuan5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/receiveBalance"
                android:textColor="@color/themecolor" />

            <TextView
                android:id="@+id/tvHuaZhuanReceiveBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="HK"
                android:textColor="@color/themecolor" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/personal_information_1" />

    <LinearLayout
        android:id="@+id/llHuaZhuanType3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kuanggongprice"
                android:textColor="@color/themecolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvHuaZhuanGasPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‰ˆ0.0000 ether"
                android:textColor="@color/textcolor3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/slow"
                android:textColor="@color/textcolor3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fast"
                android:textColor="@color/textcolor3" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekHuaZhuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxHeight="8dp"
            android:progressDrawable="@drawable/progress_blockwallet"
            android:splitTrack="false"
            android:thumb="@drawable/ic_seek_thumb" />

        <TextView
            android:id="@+id/tvHuaZhuanGasPrice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0.00 gwei"
            android:textColor="@color/textcolor3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHuaZhuanType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/poundage"
            android:textColor="@color/themecolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvHuaZhuanPoundage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/themecolor"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        style="@style/BtnStyle"
        android:layout_marginBottom="20dp"
        android:onClick="submit"
        android:text="@string/huazhuancommit" />

    <TextView
        style="@style/BtnStyle"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape_theme_gray"
        android:onClick="cancel"
        android:text="@string/cancel"
        android:textColor="@color/color9" />

</LinearLayout>