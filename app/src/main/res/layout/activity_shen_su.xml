<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".ui.walletpage.ShenSuActivity">

    <include layout="@layout/layout_title_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_appealType"
                style="@style/RLayoutStyle"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="申诉类型"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_appealType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/iv_enter"
                    android:gravity="end"
                    android:hint="请选择申诉类型"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_enter"
                    style="@style/ImageEnter"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="申诉信息"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/et"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_theme_gray"
                    android:gravity="start"
                    android:hint="@string/input_shensu"
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/uploadSign"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/llContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/upload">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/ivedit1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_image_edit"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_add1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rc_ext_tab_add" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/upload"
                        android:visibility="invisible">

                        <ImageView

                            android:id="@+id/iv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/ivedit2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_image_edit"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_add2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rc_ext_tab_add" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/upload"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/ivedit3"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_image_edit"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_add3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rc_ext_tab_add" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/BtnStyle"
                android:onClick="commit"
                android:text="@string/commit" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>