<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context=".ui.walletpage.ShenSuActivity">

    <include layout="@layout/layout_title_back" />


    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="@string/input_shensu"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:padding="12dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploadSign"
            android:textColor="@color/textcolor2"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploadSignTip"
            android:textColor="@color/textcolor3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/fl1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/upload">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivedit1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:src="@drawable/icon_image_edit"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/rc_ext_tab_add" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/upload"
            android:visibility="invisible">

            <ImageView

                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivedit2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:src="@drawable/icon_image_edit"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/rc_ext_tab_add" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/upload"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivedit3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:src="@drawable/icon_image_edit"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_add3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/rc_ext_tab_add" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        style="@style/BtnStyle"
        android:onClick="commit"
        android:text="@string/commit" />


</LinearLayout>