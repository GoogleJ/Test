<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/ic_msg_popwindow_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_conversation_detail"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="群组详情"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv1"
        android:layout_alignStart="@id/tv1"
        android:layout_alignEnd="@id/tv1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="6dp"
        android:background="#656565" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:drawableStart="@drawable/ic_conversation_trand"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="群主走势"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>