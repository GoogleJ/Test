<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <ImageView

        android:id="@+id/m_item_contact_heard_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_header"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/m_item_contact_user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/user_name"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/m_item_contact_heard_icon"
        app:layout_constraintStart_toEndOf="@+id/m_item_contact_heard_icon"
        app:layout_constraintTop_toTopOf="@+id/m_item_contact_heard_icon"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/m_item_contact_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:text="@string/m_item_contact_type_text"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/m_item_contact_heard_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/m_item_contact_heard_icon"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/m_item_contact_type_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:background="@drawable/shape_circular_bead_btn"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="@string/m_item_contact_type_text_1"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/m_item_contact_heard_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/m_item_contact_heard_icon"
        tools:ignore="RtlCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>