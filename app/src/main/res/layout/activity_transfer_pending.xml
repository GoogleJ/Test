<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:ignore="MissingConstraints,RtlCompat"
    android:layout_height="match_parent">
    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_transfer_pending_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTitle="@string/m_transfer_title_bar"
        app:titleBarTextColor="@color/white"
        />
    <ImageView
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/m_transfer_pending_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_transfer_pending_user"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:textSize="18dp"
        android:textColor="@color/login_bg"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        >
        <TextView
            android:id="@+id/m_transfer_pending_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_transfer_pending_money_text"
            android:textSize="35sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"

            />
        <TextView
            android:id="@+id/m_transfer_pending_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_red_envelopes_unit_label"
            android:textSize="25sp"
            android:textColor="@color/m_red_envelopes_unit_text"
            android:layout_marginStart="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/m_transfer_pending_money_text"
            app:layout_constraintTop_toTopOf="@+id/m_transfer_pending_money_text"
            app:layout_constraintStart_toEndOf="@+id/m_transfer_pending_money_text"
            />

        <TextView
            android:id="@+id/m_transfer_pending_return_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_transfer_pending_return_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/m_transfer_pending_money_text"
            />
        <TextView
            android:id="@+id/m_transfer_pending_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:text="@string/m_transfer_pending_time_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>