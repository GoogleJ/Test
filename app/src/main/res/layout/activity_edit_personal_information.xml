<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="all">

    <include layout="@layout/layout_title_back" />

    <ImageView
        android:id="@+id/m_edit_information_header_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_commit_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m_edit_information_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/m_edit_information_name_label"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/m_edit_information_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@null"
                android:hint="@string/m_edit_information_name_edit"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/m_edit_information_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@color/m_add_friend_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/m_edit_information_area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/m_edit_information_area_label"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/m_edit_information_area_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@null"
                android:hint="@string/m_edit_information_area_edit"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@color/m_add_friend_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/m_edit_information_btn"
        style="@style/BtnStyle"
        android:text="@string/accomplish" />


</LinearLayout>