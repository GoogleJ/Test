<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zxjk.duoduo.ui.widget.TitleBar
        android:id="@+id/m_edit_information_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_edit_information_title_bar" />

    <ImageView
        android:id="@+id/m_edit_information_header_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_commit_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m_edit_information_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:text="@string/m_edit_information_name_label"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:inputType="text"
                android:id="@+id/m_edit_information_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@null"
                android:hint="@string/m_edit_information_name_edit"
                android:imeOptions="actionNext"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:id="@+id/m_edit_information_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="39dp"
            android:background="@color/m_add_friend_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/m_edit_information_area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:text="@string/m_edit_information_area_label"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:inputType="text"
                android:id="@+id/m_edit_information_area_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@null"
                android:hint="@string/m_edit_information_area_edit"
                android:imeOptions="actionDone"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="39dp"
            android:background="@color/m_add_friend_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/m_edit_information_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="38dp"
        android:background="@color/m_edit_information_btn"
        android:gravity="center"
        android:text="@string/m_edit_information_btn"
        android:textColor="@color/m_verification_send_btn" />


</LinearLayout>