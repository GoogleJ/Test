<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/m_constacts_friend"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:ignore="MissingConstraints,RtlCompat">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/m_constants_header_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="6dp"

        android:src="@drawable/icon_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:text="爱吃苹果"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/m_constants_header_icon"
        app:layout_constraintTop_toTopOf="@+id/m_constants_header_icon" />

    <TextView
        android:id="@+id/m_singture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="真是姓名"

        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/m_constants_header_icon"
        app:layout_constraintStart_toStartOf="@+id/m_user_name" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/bga_adapter_line"
        app:layout_constraintTop_toBottomOf="@+id/m_constants_header_icon"
        app:layout_constraintStart_toStartOf="@+id/m_user_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>