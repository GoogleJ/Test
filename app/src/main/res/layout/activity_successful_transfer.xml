<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints,RtlCompat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/m_successful_transfer_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/m_successful_transfer_title_bar"
        />
    <ImageView
        android:id="@+id/m_successful_transfer_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_transfer_successful"
        />
    <TextView
        android:id="@+id/m_successful_transfer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_successful_transfer_label"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="19sp"
        android:textColor="@color/m_red_envelopes_unit_text"
        />
    <TextView
        android:id="@+id/m_successful_transfer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_successful_transfer_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:textColor="@color/m_add_friend_wechat_label_2"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/m_successful_transfer_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_successful_transfer_money_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="35sp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/m_successful_transfer_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/m_successful_transfer_money_text"
            app:layout_constraintTop_toTopOf="@+id/m_successful_transfer_money_text"
            app:layout_constraintStart_toEndOf="@+id/m_successful_transfer_money_text"
            android:textColor="@color/m_red_envelopes_unit_text"
            android:text="@string/m_red_envelopes_unit_label"
           />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/m_successful_transfer_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="178dp"
        android:gravity="center"
        android:text="@string/m_successful_transfer_commit"
        android:background="@drawable/shape_bac_normal"

        />

</LinearLayout>