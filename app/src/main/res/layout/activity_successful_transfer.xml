<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingConstraints,RtlCompat">

    <include layout="@layout/layout_title_back" />


    <ImageView
        android:id="@+id/m_successful_transfer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:src="@drawable/icon_transfer_successful" />

    <TextView
        android:id="@+id/m_successful_transfer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="@string/m_successful_transfer_label"
        android:textColor="@color/m_red_envelopes_unit_text"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/m_successful_transfer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:text="@string/m_successful_transfer_text"
        android:textColor="@color/m_add_friend_wechat_label_2"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/m_successful_transfer_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/m_successful_transfer_money_text"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/m_successful_transfer_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/m_red_envelopes_unit_label"
            android:textColor="@color/m_red_envelopes_unit_text"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/m_successful_transfer_money_text"
            app:layout_constraintStart_toEndOf="@+id/m_successful_transfer_money_text"
            app:layout_constraintTop_toTopOf="@+id/m_successful_transfer_money_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/m_successful_transfer_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/shape_bac_normal"
        android:gravity="center"
        android:text="@string/m_successful_transfer_commit"

        />

</LinearLayout>