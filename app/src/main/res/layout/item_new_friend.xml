<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlCompat"
    >

    <ImageView
        android:id="@+id/m_item_new_friend_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_item_new_friend_user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:text="不爱吃水果"
        android:textColor="@color/black"

        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/m_item_new_friend_icon"
        app:layout_constraintTop_toTopOf="@+id/m_item_new_friend_icon"
         />

    <TextView
        android:id="@+id/m_item_new_friend_message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="“周瑞”邀请你进群"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/m_item_new_friend_icon"
        app:layout_constraintStart_toStartOf="@+id/m_item_new_friend_user_name_text" />
    
    <TextView
        android:id="@+id/m_item_new_friend_type_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:text="添加"

        android:background="@color/head_ok_pressed_bg"
        android:textSize="14dp"

        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/m_item_new_friend_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/m_item_new_friend_icon" />
    <View
        app:layout_constraintTop_toBottomOf="@+id/m_item_new_friend_icon"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        app:layout_constraintStart_toStartOf="@+id/m_item_new_friend_message_label"
        android:background="@color/m_add_friend_line"
        />


</androidx.constraintlayout.widget.ConstraintLayout>