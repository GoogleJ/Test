<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />


    <ImageView
        android:id="@+id/group_headers"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:src="@drawable/icon_header" />

    <TextView
        android:id="@+id/group_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/group_chat_name"
        android:textColor="@color/text_color3"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="30dp"
        android:background="@color/background_color2" />

    <TextView
        android:id="@+id/invite_to_group_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/invite_to_group_chat"
        android:textColor="@color/text_color3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/join_a_group_chat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="70dp"
        android:background="@drawable/shape_circular_bead_btn"
        android:gravity="center"
        android:text="@string/join_a_group_chat"
        android:textColor="@color/theme_color"
        android:textSize="16sp" />

</LinearLayout>