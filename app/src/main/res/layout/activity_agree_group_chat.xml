<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zxjk.duoduo.weight.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/group_chat_invitation" />
  <ImageView
      android:id="@+id/group_headers"
      android:layout_gravity="center_horizontal"
      android:layout_width="80dp"
      android:src="@drawable/icon_header"
      android:layout_height="80dp"
      android:layout_marginTop="49dp"
      />
    <TextView
        android:id="@+id/group_chat_name"
        android:text="@string/group_chat_name"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="19sp"
        android:textColor="@color/black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bga_adapter_line"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:id="@+id/invite_to_group_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_to_group_chat"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="19sp"
        />
    <TextView
        android:id="@+id/join_a_group_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_a_group_chat"
        android:gravity="center"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="115dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/themecolor"
        android:textSize="19sp"
        android:background="@drawable/shape_bac_normal"

        />

</LinearLayout>