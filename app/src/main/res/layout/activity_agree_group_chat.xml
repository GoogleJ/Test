<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/layout_title_back" />


    <ImageView
        android:id="@+id/group_headers"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_header" />

    <TextView
        android:id="@+id/group_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/group_chat_name"
        android:textColor="@color/text_color3"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorE" />

    <TextView
        android:id="@+id/invite_to_group_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/invite_to_group_chat"
        android:textColor="@color/text_color3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/join_a_group_chat"
        style="@style/BtnStyle"
        android:layout_margin="80dp"
        android:text="@string/join_a_group_chat" />

</LinearLayout>