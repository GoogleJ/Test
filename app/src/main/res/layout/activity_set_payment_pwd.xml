<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:psd="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"

    android:orientation="vertical">
    <com.zxjk.duoduo.ui.widget.TitleBar
        android:id="@+id/m_set_payment_pwd_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:titleBarLeftImage="@drawable/ico_back"
        app:titleBarTextColor="@color/white"
        app:titleBarTitle="@string/update_pay_pwd" />

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/all_ed"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m_set_payment_pwd_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="98dp"
                android:text="@string/please_input_paypass"
                android:textColor="@color/m_verification_send_btn"
                android:textSize="19dp" />

            <com.zxjk.duoduo.ui.widget.PayPsdInputView
                android:id="@+id/m_set_payment_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="40dp"
                android:inputType="number"
                psd:maxCount="6"
                psd:psdType="weChat"
                psd:rectAngle="4dp" />

            <TextView
                android:id="@+id/m_edit_information_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="38dp"
                android:background="@color/m_edit_information_btn"
                android:gravity="center"
                android:text="@string/m_edit_information_btn"
                android:textColor="@color/m_verification_send_btn"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>